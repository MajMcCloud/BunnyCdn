<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>BunnyCdn</AssemblyName>
    <TargetFrameworks>netstandard2.0;netcoreapp3.1</TargetFrameworks>
    <Version>0.12.0</Version>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>

    <Authors>iamcarbon</Authors>
    <Description>A .NETStandard API for BunnyCDN.</Description>
    <PackageId>BunnyCdn</PackageId>
    <PackageTags>bunnycdn async netstandard</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/carbon/BunnyCdn</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="System.Text.Json" Version="4.7.1" />
  </ItemGroup>
</Project>